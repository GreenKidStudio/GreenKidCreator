<Application x:Class="GreenKidEditor.Application.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:application="clr-namespace:GreenKidEditor.Application"
             StartupUri="../MainWindow/MainWindowView.xaml" mc:Ignorable="d">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <application:ViewModelLocator x:Key="ViewModelLocator" d:IsDataSource="True"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>