<UserControl x:Class="GreenKidEditor.MainWindow.Menus.AddItemBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styles="clr-namespace:GreenKidEditor.Styles" mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0">
            <ComboBoxItem Content="Test" IsSelected="True"/>
            <ComboBoxItem Content="Test 2"/>
        </ComboBox>
        
        <Button Grid.Column="1" Style="{ StaticResource MiniButtonStyle }" Margin="2, 0, 0, 0">
            <styles:ConfirmPathView/>
        </Button>
    </Grid>
</UserControl>